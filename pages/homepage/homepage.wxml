<!--pages/homepage/homepage.wxml-->
<!-- 搜索栏-->
<view>
  <view class='search'>
    <icon type = 'search' size = '20' ></icon>
    <input type = 'text' class='searchInput' bindinput = 'bindSearchInput' value = '{{keyboardInputValue}}' placeholder='请输入搜索的内容.' bindconfirm='disposeSearch'/>
    <view hidden='' catchtap='clearSearch'>
     <icon type = 'clear' size = '28'></icon>
    </view>
  </view> 
</view>
<!-- banner -->
<view>
  <swiper indicator-dots='true' autoplay='true' interval='5000'>
    <swiper-item>
      <image src='/images/post/post-1@text.jpg'></image>
    </swiper-item>
    <swiper-item>
      <image src='/images/post/post-2@text.jpg'></image>
    </swiper-item>
    <swiper-item>
      <image src='/images/post/post-3@text.jpg'></image>
    </swiper-item>
  </swiper>
</view> 
<!-- 功能栏 -->
<view class='funcBar'>
  <button></button>
</view>

