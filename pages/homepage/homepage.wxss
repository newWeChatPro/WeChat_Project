/* pages/homepage/homepage.wxss */
@import "/pages/movie/movie-list/movie-list-tpl.wxss";
.searchInput{
  width:600rpx;
  height: 80rpx;
  margin:10rpx 20rpx;
  
}
.search{
  border: 1rpx solid cyan;
  border-radius: 5px;
  height: 90rpx;
  flex-direction:row; 
  display:flex;
  margin: 5rpx 10rpx 0 5rpx;
  align-items: center;
  padding:0 15rpx;
}
.clearBtn{
  margin:20rpx 0 10rpx;
}

swiper{
  width:100%;
  height:500rpx;
  margin: 20rpx 0;
}
swiper image{
  width:100%;
  height:500rpx;
}
 
.funcBar{
  margin-left:auto;
  display: flex;
  flex-direction: row;
  background-color: whitesmoke;
}
.funcBtn{
  display: flex;
  flex-direction: column;
  margin: auto;
  font-weight: bold;

}
.funcBtnImg{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50rpx;
}
