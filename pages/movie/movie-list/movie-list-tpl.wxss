@import '../single-movie/movie-tpl.wxss';
.movie-list-container{
  background-color: #fff;
  display: flex;
  flex-direction: column;
  width: 50%;
}

.movie-head{
  padding: 30rpx 20rpx 22rpx;
  font-size: 30rpx;
}
.txt{
  float: left;
}
.more{
  float:right;
}

.more-text{
  vertical-align: middle;
  margin-right: 10rpx;
  color: #4A6141;
}

.more-img{
  width:9rpx;
  height: 16rpx;
  vertical-align: middle;
}

.movies-container{
  display: flex;
  flex-direction: column;
}

